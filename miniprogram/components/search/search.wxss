.search-container {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  position: relative;
}

/* 内部样式icon-search-in,内部不能修改外部类，
需要重新定义一个类 */
.icon-search-in {
  position: absolute;
  top: 50%;
  transform: translate(16rpx, -50%);
  color: #9f9f9f;
}

.search-input {
  flex: 1;
  height: 68rpx;
  font-size: 28rpx;
  border-radius: 50px;
  background-color: #f5f5f5;
  padding-left: 60rpx;
}

.search-btn {
  background: #d43c33;
  color: #fff;
  margin-left: 20rpx;
  font-size: 24rpx;
}

.search-input-placeholder {
  color: #999;
}